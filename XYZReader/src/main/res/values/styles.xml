<resources>

    <style name="XYZTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowExitTransition">@transition/transition_exit</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_image_transform</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingRight">@dimen/list_side_margin</item>
        <item name="android:paddingLeft">@dimen/list_side_margin</item>
        <item name="android:paddingTop">@dimen/recycler_view_padding_top</item>
        <item name="android:paddingBottom">@dimen/recycler_view_padding_bottom</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <!--Article Master Grid Styles-->
    <style name="GridImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:transitionName">@string/transition_photo</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/photo_placeholder</item>
    </style>

    <style name="GridTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/grid_article_title_padding_left</item>
        <item name="android:paddingRight">@dimen/grid_article_title_padding_right</item>
        <item name="android:paddingBottom">@dimen/grid_article_title_padding_bottom</item>
        <item name="android:paddingTop">@dimen/grid_article_title_padding_top</item>
        <item name="android:textSize">@dimen/grid_article_title_text_size</item>
        <item name="android:textColor">@color/grid_article_title_text_color</item>
        <item name="android:maxLines">@integer/grid_article_title_max_lines</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GridSubtitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/grid_article_subtitle_padding_left</item>
        <item name="android:paddingRight">@dimen/grid_article_subtitle_padding_right</item>
        <item name="android:paddingBottom">@dimen/grid_article_subtitle_padding_bottom</item>
        <item name="android:textColor">@color/grid_article_subtitle_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/grid_article_subtitle_max_lines</item>
    </style>

    <!--Article Detail Styles-->
    <style name="FABStyle">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_share</item>
    </style>

    <style name="ArticleTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/detail_metabar_title_bottom_padding</item>
        <item name="android:textColor">@color/article_detail_title_text_color</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArticleByStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/article_detail_by_color</item>
    </style>

    <style name="DetailBodyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/detail_inner_horiz_margin</item>
        <item name="android:layout_marginRight">@dimen/detail_inner_horiz_margin</item>
        <item name="android:textColor">@color/article_detail_body_text_color</item>
        <item name="android:textSize">@dimen/detail_body_text_size</item>
        <item name="android:paddingBottom">@dimen/detail_body_bottom_margin</item>
    </style>

    <style name="MetaBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">@dimen/detail_metabar_vert_padding</item>
        <item name="android:paddingLeft">@dimen/detail_inner_horiz_margin</item>
        <item name="android:paddingRight">@dimen/detail_inner_horiz_margin</item>
        <item name="android:paddingTop">@dimen/detail_metabar_vert_padding</item>
        <item name="android:paddingBottom">@dimen/detail_metabar_vert_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/theme_primary_dark</item>
    </style>

</resources>